# Reload sxhkd config
alt + Escape
    pkill -USR1 -x sxhkd

# Launcher
alt + p
    startrofi run

# BSPWM {{{

# Main controls {{{

# Open new terminal
alt + Return
    termite

# quit bspwm normally
alt + super + Escape
	bspc quit

# Reload polybar
alt + shift + r
    $HOME/.config/polybar/launch.sh

# Reload bspwm config
alt + ctrl + shift + r
    $HOME/.config/bspwm/bspwmrc

# Kill a node
alt + q
	bspc node -c

# }}}
# Layout controls {{{
# alternate between the tiled and monocle layout
alt + {m,button2}
	bspc desktop -l next

# set the window state
alt + {t,shift + s,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Mirror and flip leaves of tree
alt + {comma,period}
	bspc node '@/' -F {horizontal,vertical}

# Rotate leaves of tree
alt + shift + {comma,period}
	bspc node '@/' -R {270, 90}

# Equalize/balance nodes
alt + {_,shift + } e
    bspc node '@/' -{B,E}

# }}}
# Focus/Swap/Send {{{

# Swap the current node and the biggest node
alt + shift + Return
	bspc node -s biggest.local

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local

# Preselect in direction
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Move the current node into the preselection
alt + ctrl + Return
    bspc node -n 'last.!automatic.active'

# focus or send to the given desktop on the current monitor
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} $(bspc query -M -m focused)/{1-9,10}

# Select/send to the chosen monitor
alt + ctrl + {_,shift +} {1-9,0}
    bspc {monitor -f, node -m} '^{1-9,10}'


# }}}
# Resize/Move {{{

# expand the tiled space in the given direction
alt + {Left,Down,Up,Right}
    bspc node {@west -r -30,@south -r +30,@north -r -30,@east -r +30}

# contract the tiled space in the given direction
alt + shift + {Left,Down,Up,Right}
	bspc node {@east -r -30,@north -r +30,@south -r -30,@west -r +30}

# move a floating window
alt + ctrl + {Left,Down,Up,Right}
	bspc node --move {-20 0,0 +20,0 -20,+20 0}

# }}}

# }}}
# Screenshots {{{

Print
    maim --hidecursor /tmp/screenshot.png; \
    imgurbash2 /tmp/screenshot.png; \
    notify-send 'Screenshot uploaded'


alt + Print
    maim --hidecursor -s /tmp/screenshot.png; \
    imgurbash2 /tmp/screenshot.png;  \
    notify-send 'Screenshot uploaded'

# }}}
# Fn audio/display {{{

XF86AudioMute
    volctl -t

XF86AudioLowerVolume
    volctl -d 2

XF86AudioRaiseVolume
    volctl -i 2

XF86MonBrightnessDown
    brightctl -d 5

XF86MonBrightnessUp
    brightctl -i 5

# }}}
# Media controls {{{

alt + bracketleft
    spotifyctl prev

alt + bracketright
    spotifyctl next

Pause
    spotifyctl toggle

# }}}
# Misc {{{

super + l
    i3lock-krx

XF86Sleep
    suspend.sh

XF86PowerOff
    suspend.sh

XF86TouchpadToggle
    touch_toggle

# }}}

