background = ${colors.dark0_hard}
background-alt = ${colors.dark2}
foreground = ${colors.light4}
foreground-alt = ${colors.dark2}
secondary = #e60053

# Icons for the section separators
[corners]
tl = 
tr = 
bl = 
br = 


# Top Bar {{{
[bar/top]
width = 100%
height = 20
fixed-center = false
wm-restack = bspwm

line-size = 2

background = ${colors.dark0_hard}
foreground = ${colors.light4}

; Text/icon fonts
font-0 = Input Mono Narrow:pixelsize=10;2
font-1 = FontAwesome:pixelsize=11;2
font-3 = Material Icons:pixelsize=13;4

; Seems to be the only one that correctly renders the corner triangles
font-2 = HeavyData Nerd Font:pixelsize=15;3

modules-left = bspwm xwindow
modules-right = cpu memory battery date

[module/xwindow]
type = internal/xwindow
label-background = ${colors.dark0_soft}
label-foreground = ${colors.light4}
label = %title:0:50:...%
label-padding = 1

format-suffix = ${corners.tl}
format-suffix-background = ${colors.dark0_hard}
format-suffix-foreground = ${colors.dark0_soft}

[module/bspwm]
type = internal/bspwm
format-suffix = ${corners.tl}
format-suffix-background = ${colors.dark0_soft}

label-focused = %index%
label-focused-background = ${colors.light4}
label-focused-foreground = ${colors.dark1}
label-focused-underline= ${colors.neutral_orange}
label-focused-padding = 1

label-occupied = %index%
label-occupied-background = ${colors.light4}
label-occupied-foreground = ${colors.dark2}
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.bright_red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.dark4}
label-empty-background = ${colors.light4}
label-empty-padding = 1

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label> <ramp-coreload>

format-prefix = ${corners.tr}
format-prefix-background = ${colors.dark0_hard}
format-prefix-foreground = ${colors.dark0_soft}

;label = " %{u#83a598} %percentage%%"
label = "%{B#32302f}  %percentage%%"
format-foreground = ${colors.light4}

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/memory]
type = internal/memory
interval = 2

format-background = ${colors.dark0_soft}
format-foreground = ${colors.light4}
format-prefix = " "

format-padding = 2
label =  %gb_used%
;label-underline = ${colors.bright_green}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ACAD
full-at = 98

;format-charging = <animation-charging> <label-charging>
;format-charging-underline = #ffb52a

;format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-underline = ${colors.neutral_red}

;format-full-prefix = " "
;format-full-prefix-foreground = ${colors.foreground-alt}
;format-full-underline = ${colors.neutral_red}

;ramp-capacity-0 = 
;ramp-capacity-1 = 
;ramp-capacity-2 = 
;ramp-capacity-foreground = ${colors.foreground-alt}

;animation-charging-0 = 
;animation-charging-1 = 
;animation-charging-2 = 
;animation-charging-foreground = ${colors.foreground-alt}
;animation-charging-framerate = 750

[module/date]
type = internal/date
interval = 5

date = "%a %d %b"
time = "%I:%M %p"

format-background = ${colors.light4}
label-foreground = ${colors.dark0_soft}

format-prefix = ${corners.tr}
format-prefix-background = ${colors.dark0_soft}

label = %date% | %time%
label-padding = 1
label-background = ${colors.light4}

# }}}
# Bottom bar {{{
[bar/bot]
width = 100%
height = 20
fixed-center = true
bottom = true
wm-restack = bspwm

background = ${colors.dark0_hard}
foreground = ${colors.light4}

font-0 = Input Mono Narrow:pixelsize=10;2
font-1 = FontAwesome:pixelsize=11;2
font-3 = Material Icons:pixelsize=13;4

; Seems to be the only one that correctly renders the corner triangles
font-2 = HeavyData Nerd Font:pixelsize=15;3

modules-left = pkg
modules-right = volume

tray-position = left
tray-background = ${colors.light4}
tray-padding = 1


[module/pkg]
type = custom/script
interval = 3600

format-prefix = ${corners.bl}
format-prefix-foreground = ${colors.light4}

format = <label>
format-background = ${colors.dark0_soft}
label = " %output:0:30% "

format-suffix = ${corners.bl}
format-suffix-background = ${colors.dark0_hard}
format-suffix-foreground = ${colors.dark0_soft}

exec = .config/polybar/pkg.sh
exec-if = "curl google.com > /dev/null"


[module/volume]
type = internal/volume

format-volume = %{T4}<ramp-volume>%{T-} <bar-volume>
format-volume-background = ${colors.light4}
format-volume-foreground = ${colors.dark0_soft}
format-volume-padding = 1

format-muted-prefix = "%{T4}%{T-} "
format-muted = <bar-volume>
format-muted-background = ${colors.light4}
format-muted-foreground = ${colors.dark0_soft}
format-muted-padding = 1

ramp-volume-font = 4
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

bar-volume-width = 15
bar-volume-foreground-0 = ${colors.faded_aqua}
bar-volume-foreground-1 = ${colors.faded_aqua}
bar-volume-foreground-2 = ${colors.faded_aqua}
bar-volume-foreground-3 = ${colors.faded_aqua}
bar-volume-foreground-4 = ${colors.faded_aqua}
bar-volume-foreground-5 = ${colors.neutral_orange}
bar-volume-foreground-6 = ${colors.neutral_red}
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-indicator-foreground = ${colors.dark0_hard}
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.dark0_soft}


[module/spotify]
type = custom/script



# }}}

