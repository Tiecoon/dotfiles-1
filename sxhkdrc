# Reload sxhkd config
alt + Escape
    pkill -USR1 -x sxhkd

# Launcher
alt + p
    startrofi run

# BSPWM {{{

# Main controls {{{
# Open new terminal
alt + Return
    termite

# Open a new manually placed terminal
alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}; termite

# Swap the current node and the biggest node
alt + shift + Return
	bspc node -s biggest.local

# quit bspwm normally
alt + super + Escape
	bspc quit

alt + shift + r
    $HOME/.config/polybar/launch.sh

alt + ctrl + shift + r
    $HOME/.config/bspwm/bspwmrc

alert
# close and kill
alt + shift + q
	bspc node -c

# }}}
# Layout controls {{{
# alternate between the tiled and monocle layout
alt + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
alt + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# set the window state
alt + {t,shift + s,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# }}}
# Focus/Swap/Send {{{

# focus the node in the given direction
alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node
alt + {_,shift + }Tab
	bspc node -f {next,prev}.local

# focus or send to the given desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# }}}
# Resize/Move {{{

# expand the tiled space in the given direction
alt + {Left,Down,Up,Right}
    bspc node {@west -r -30,@south -r +30,@north -r -30,@east -r +30}

# contract the tiled space in the given direction
alt + shift + {Left,Down,Up,Right}
	bspc node {@east -r -30,@north -r +30,@south -r -30,@west -r +30}

# move a floating window
alt + ctrl + {Left,Down,Up,Right}
	bspc node --move {-20 0,0 +20,0 -20,+20 0}

# }}}

# }}}
# Screenshots {{{

Print
    maim --hidecursor /tmp/screenshot.png; \
    URL=$(imgurbash2 /tmp/screenshot.png | sed -E 's/ .+//g'); \
    notify-send 'Screenshot uploaded'


alt + Print
    maim --hidecursor -s /tmp/screenshot.png; \
    URL=$(imgurbash2 /tmp/screenshot.png | sed -E 's/ .+//g'); \
    notify-send 'Screenshot uploaded'

# }}}
# Fn audio/display {{{

XF86AudioMute
    volctl -t

XF86AudioLowerVolume
    volctl -d 2

XF86AudioRaiseVolume
    volctl -i 2

XF86MonBrightnessDown
    brightctl -d 5

XF86MonBrightnessUp
    brightctl -i 5

# }}}
# Media controls {{{

alt + bracketleft
    spotifyctl prev

alt + bracketright
    spotifyctl next

Pause
    spotifyctl toggle

# }}}
# Misc {{{

super + l
    i3lock-krx

XF86Sleep
    suspend.sh

XF86PowerOff
    suspend.sh

XF86TouchpadToggle
    touch_toggle

# }}}

